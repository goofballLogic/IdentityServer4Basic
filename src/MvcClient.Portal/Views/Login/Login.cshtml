    <form asp-action="Login" asp-controller="Login">
        <div class="row">
            <div class="col-md-7 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="box box-primary">
                    <h3>Login</h3>
                    <div class="box-header with-border">
                        <p>Please enter your student portal username and password to log in.</p>
                    </div>
                    <section id="loginForm">
                        <div class="form-horizontal">
                            <div class="form-group has-feedback">
                                <label for="UserName" CssClass="col-md-3 control-label">User name</label>
                                <div class="col-lg-7">
                                    <input type="text" name="UserName" CssClass="form-control" placeholder="Enter Username" />
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <label for="Password" CssClass="col-md-3 control-label">Password</label>
                                <div class="col-lg-7">
                                    <input type="password" name="Password" CssClass="form-control" placeholder="Enter Password" />
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                </div>
                            </div>

                            <div class="form-group has-feedback">
                                <div class="col-md-offset-3 col-md-7">
                                    <button type="submit" class="btn btn-success btn-block btn-flat">Login</button>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <div class="col-md-offset-3 col-md-7">
                                    <button type="button" class="btn btn-danger btn-block btn-flat">Cancel</button>
                                    <a href="#" class="btn btn-warning btn-block btn-flat">Forgotten Password</a>
                                </div>
                            </div>

                            <div class="form-group has-feedback">
                                <div class="col-md-offset-3 col-md-7 col-sm-8 col-sm-offset-2">
                                    <label>
                                        <input type="checkbox" id="RememberMe" name="RememberMe" />
                                    </label>
                                </div>
                            </div>

                        </div>

                        <br />
                        <div class="col-md-offset-3 col-md-7">
                            <p>
                                <a href="#">Register</a>
                            </p>
                        </div>
                    </section>
                </div>
            </div>

        </div>
    </form>

@*</body>
